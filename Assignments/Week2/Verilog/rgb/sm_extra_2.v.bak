module sm_extra_2 (clk, reset, in, state, done, out)

input clk, reset;
input [6:0] in;
output done;
output [3:0] state, nstate;
output [31:0] out;

reg [3:0] state, nstate;

always @ (posedge clk or posedge reset) begin
   if (reset == 1)
	state = resett;
	else
   state = nstate;
	end

parameter resett = 3'b0;
parameter load   = 3'b1;
parameter compare = 3'd2;
parameter mul = 3'd3;
parameter done = 3'd4;
parameter wait_mul = 3'd5;	
	
always @ (state,in, done_mul) begin
  case (state)
  reset:
  nstate = load;
  load:
  nstate = compare;
  compare:
  if (i>0)
  nstate = mul:
  else
  nstate = done;
  mul:
  if(done_mul = 1'b1)
  nstate = compare;
  else
  nstate = wait_mul;
  default nstate = reset;
  endcase
  end
//kiem soat nhan 
wire reset_mul;
assign reset_mul = (state == mul) ? 1'b0 : 1'b1;
wire [47:0] muul;
wire [31:0] fn2_mul;  
mulFP kgkgk (clk, haha, 01000000001011011111100001010100 , fn2_mul, muul, done_mul, reset_mul);

//kiem soat in
reg [31:0] haha;
wire [31:0] in2, in3;
assign in2 = (state == load) ? 32'b00111111100000000000000000000000 : in3;
assign in3 = (state == compare) ? fn2_mul : haha;
always @ (posedge clk) begin
    haha = in2;
	 end
//kiem soat i
assign in_i = (state == load) ? in : i;
reg [6:0] i;
always @(posedge clk) begin
   i = in_i;
    end	
	 
endmodule